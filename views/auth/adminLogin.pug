extends ../layout

block content
    div(class="bg-[#2F3159]")
        div.min-h-screen.items-center.flex.flex-col
            a.p-4.absolute.left-0(href='../')
                img(src="/images/logo.svg")
            img.absolute.right-0.z-10(src="/images/graph.png", alt="", class="w-[300px]")
            div.m-auto.flex.flex-col.gap-3.p-6.rounded-lg.items-center.text-white.mt-20.z-10.bg-center.bg-cover(class="bg-[url('/images/cBlurrs.png')] w-[450px]")
                div.flex.flex-col.gap-2.w-full
                    div.font-medium.text-xs E-mail Address
                    input.w-full.rounded-lg.h-10.text-xs.px-2.outline-transparent(placeholder="Please Enter Your Email Here", class="bg-[#494C7D]")
                    div.font-medium.text-xs Password
                    input.w-full.rounded-lg.h-10.text-xs.px-2.outline-transparent(placeholder="Please Enter Your Password Here", class="bg-[#494C7D]" type="password")
                a.p-2.rounded-lg.w-full.text-white.font-medium.flex.justify-center.text-sm(href="/admin/userslist", class="bg-gradient-to-r from-[#594ED1] to-[#974ED1]") Sign In
            img(src="/images/footerShade.svg", alt="", class="absolute bottom-0")
            img(src="/images/footer.png")